<% include ./partials/header %>
<link rel="stylesheet" href="/question.css">
</head>
<body>
        <div class="container">
                <div class="card my-5">
                  <div class="card-body">
                      <div id="question-no">
                        1/15
                      </div>
                      <div id="none-selected" class="hidden text-left">
                        Please select an option to continue!
                      </div>
                        <div id="question-title" class="card-title">
                          <!-- <%= questions[1].title %> -->
                          Title
                        </div> 
            
                        <div id="options" class="m-2">
                          <div class="option row">
                            <div class="col-1"><strong>A</strong></div>
                            <div onclick="selectOption('a')" class="col-11 option-box" id="a">a</div>
                            <!-- <div onclick="selectOption('a')" class="col-11 option-box" id="a"><%= questions[1].options.split(",")[0] %></div> -->
                          </div>
                          <div class="option row">
                              <div class="col-1"><strong>B</strong></div>
                              <div onclick="selectOption('b')" class="col-11 option-box" id="b">b</div>
                            </div>
                            <div class="option row">
                                <div class="col-1"><strong>C</strong></div>
                                <div onclick="selectOption('c')" class="col-11 option-box" id="c">c</div>
                              </div>
                              <div class="option row">
                                  <div class="col-1"><strong>D</strong></div>
                                  <div onclick="selectOption('d')" class="col-11 option-box" id="d">d</div>
                                </div>
                        </div>
                      <div id="buttons">
                        <a id="leave-quiz" href="/auth/logout">Leave the quiz</a>
                        <form action="/" method="GET">
                          <input id="selected-option" name="option" type="text" class="hidden2">
                          <input type="submit" class="btn btn-sm mr-2" id="accept" placeholder="Next">
                        </form>
            
                      </div>
              
            
                  </div>
                </div>
              </div>
<script src="/scripts/question.js"></script>
<% include ./partials/footer %>